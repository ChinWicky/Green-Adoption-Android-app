<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include  android:id="@+id/order_title"
        layout="@layout/widget_title" />

    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/indicator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px100dp"
        android:background="@color/white"
        tl:tl_indicator_color="@color/main_color"
        tl:tl_indicator_height="@dimen/px4dp"
        tl:tl_indicator_width="@dimen/px80dp"
        tl:tl_indicator_width_equal_title="false"
        tl:tl_tab_padding="@dimen/px20dp"
        tl:tl_tab_space_equal="true"
        tl:tl_textSelectColor="@color/Blue"
        tl:tl_textUnselectColor="@color/text_999999"
        tl:tl_underline_color="@color/colorPrimary"
        tl:tl_underline_height="@dimen/px1dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px1dp"
        android:background="#e8e8e8" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
</layout>