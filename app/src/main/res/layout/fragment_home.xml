<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include  android:id="@+id/main_title"
        layout="@layout/widget_title" />

    <com.youth.banner.Banner
        android:id="@+id/home_banner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px400dp"
        app:delay_time="3000"
        app:image_scale_type="center_crop"
        app:indicator_drawable_selected="@drawable/deep_color_draw"
        app:indicator_drawable_unselected="@drawable/shallow_color_draw"
        app:indicator_height="@dimen/px20dp"
        app:indicator_margin="@dimen/px8dp"
        app:indicator_width="@dimen/px20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px100dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/px30dp"
        android:paddingRight="@dimen/px30dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_notice" />

        <com.graduation_project.wicky.csa.widget.TextViewAd
            android:id="@+id/tv_notice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px10dp"
            android:textColor="@color/black"
            android:textSize="@dimen/px26sp" />
    </LinearLayout>
</LinearLayout>
</layout>