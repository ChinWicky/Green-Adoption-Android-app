                        binding:bottomRightRadius="@dimen/px10dp"
                        binding:normalStrokeColor="@color/colorPrimary"
                        binding:normalStrokeWidth="@dimen/px2dp"
                        binding:topLeftRadius="@dimen/px10dp"
                        binding:topRightRadius="@dimen/px10dp" />


                    <TextView
